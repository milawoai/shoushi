<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_white">

    <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_above="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.learn.shoushi.fragment.base.BaseFragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_bottom_tabhost_height"
            android:background="@drawable/tabhost_bg">

        <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/global_bottom_tabhost_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:divider="@drawable/bg_tab_divider"
                android:dividerPadding="12dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:gravity="center"
                android:paddingLeft="0.0dp"
                android:paddingRight="0.0dp"
                android:paddingTop="0.0dp"
                android:showDividers="none"
                android:visibility="gone"/>
    </com.learn.shoushi.fragment.base.BaseFragmentTabHost>

</RelativeLayout>