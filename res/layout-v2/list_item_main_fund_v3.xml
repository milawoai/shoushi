<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/common_listview_selector"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

    <com.learn.shoushi.aChangeView.CircleTextView
            android:id="@+id/circle_text"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:textColor="@color/common_white"
            android:textSize="12dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginLeft="17dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="buy"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/margin_5dp"
            android:layout_height="@dimen/margin_50dp">

        <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/value_title_text"
                android:layout_marginRight="@dimen/margin_15dp"
                android:textSize="14dp"
                android:ellipsize="end"
                android:includeFontPadding="false"/>

        <TextView
                android:id="@+id/value_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/asset_proportion"
                android:textSize="14dp"
                android:layout_toLeftOf="@+id/value_text"
                android:layout_centerVertical="true"
                android:textColor="@color/common_gray_edit"
                android:includeFontPadding="false"/>

        <com.learn.shoushi.aChangeView.CountTextView
                android:id="@+id/value_text"
                android:layout_width="@dimen/margin_60dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text=""
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/common_gray_edit"
                android:includeFontPadding="false"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_text_color_dddddd"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>