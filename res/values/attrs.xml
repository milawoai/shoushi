<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TopActionBar -->
    <declare-styleable name="TopActionBar">
        <attr name="topbarTitle" format="string"/>
        <attr name="topbarIsLeftShow" format="boolean"/>
        <attr name="topbarLeftImgRes" format="reference"/>
        <attr name="topbarLeftText" format="string"/>
        <attr name="topbarIsRightShow" format="boolean"/>
        <attr name="topbarRightImgRes" format="reference"/>
        <attr name="topbarRightText" format="string"/>
        <attr name="topbarRightClassName" format="string"/>
        <attr name="topbarIsRight2Show" format="boolean"/>
        <attr name="topbarRight2ImgRes" format="reference"/>
        <attr name="topbarRight2Text" format="string"/>
        <attr name="topbarRight2ClassName" format="string"/>
    </declare-styleable>

    <declare-styleable name="SearchEditText">
        <attr format="integer" name="img_left"/>
        <attr format="integer" name="img_background_default"/>
        <attr format="integer" name="img_background_hover"/>
    </declare-styleable>

    <!-- GridPasswordView -->
    <declare-styleable name="gridPasswordView">
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension"/>

        <attr name="lineColor" format="color"/>
        <attr name="gridColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>

        <attr name="passwordLength" format="integer"/>
        <attr name="passwordTransformation" format="string"/>

        <attr name="passwordType" format="enum">
            <enum name="numberPassword" value="0"/>
            <enum name="textPassword" value="1"/>
            <enum name="textVisiblePassword" value="2"/>
            <enum name="textWebPassword" value="3"/>
        </attr>
    </declare-styleable>



</resources>