<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="renren_dialog_content_text">
        <item name="android:textColor">@color/renren_dialog_content_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="renren_dialog_list_item_text">
        <item name="android:textColor">@drawable/renren_dialog_list_item_text_selector</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="RenrenConceptDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--        <item name="android:windowCloseOnTouchOutside">true</item>-->
    </style>

    <style name="renren_dialog_ok_btn_text">
        <item name="android:textColor">@drawable/renren_dialog_ok_btn_text_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="renren_dialog_cancel_btn_text">
        <item name="android:textColor">@drawable/renren_dialog_cancel_btn_text_selector</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="GridPasswordView"/>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


    <style name="simple_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minWidth">@dimen/margin_100dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_15dp</item>
        <item name="android:textColor">@color/common_black_text</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="simple_item_edit">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textColorHint">@color/common_gray_edit</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/margin_15dp</item>
    </style>
    <style name="simple_item_text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">@dimen/margin_100dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_15dp</item>
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="simple_item_text_right">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/margin_15dp</item>
    </style>




</resources>